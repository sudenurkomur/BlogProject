@model BlogProject.Models.User

@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title">@Model.Username</h2>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Blog Sayısı:</strong> @Model.Blogs?.Count()</p>
        </div>
    </div>

    <hr />
    <h4 class="mt-4">Yazdığın Bloglar</h4>
    @if (Model.Blogs != null && Model.Blogs.Any())
    {
        <ul class="list-group">
            @foreach (var blog in Model.Blogs)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@blog.Title</span>
                    <a href="/Blog/Details/@blog.Id" class="btn btn-sm btn-primary">Detay</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">Henüz blog yazmadın.</p>
    }
</div>